.top-area {
  width: 100%;
  background-image: url('https://www.hzx9999.com/file/wechatapplet/2.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.top-area .nav-title {
  font-weight: 700;
}
.green {
  color: green!important;
}
.red {
  color: red!important;
}
.scrollPage {
  height: calc(100vh - calc(100rpx + env(safe-area-inset-bottom) / 2));
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
  width: 100%;
  background-color: #ffffff;
  background-image: url('https://www.hzx9999.com/file/wechatapplet/2.png');
  background-size: 100% auto;
  background-repeat: no-repeat;
  padding-bottom: 60rpx;
}
.scrollPage .container {
  width: 100%;
  padding: 30rpx;
  border-radius: 30rpx;
  background-color: #fff;
  margin-top: 200rpx;
}
.scrollPage .price-info {
  width: 100%;
  height: 110rpx;
}
.scrollPage .offer-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.scrollPage .offer-info .title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 700;
  position: relative;
  text-indent: 30rpx;
}
.scrollPage .offer-info .title::after {
  content: '';
  position: absolute;
  left: 0;
  width: 10rpx;
  height: 100%;
  border-radius: 20rpx;
  background-color: #febd01;
}
.scrollPage .offer-info .time {
  font-size: 24rpx;
  color: #888888;
}
.scrollPage .quoted-item {
  width: 100%;
  height: 126rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f7f7f7;
}
.scrollPage .quoted-item .name {
  flex: 1;
  width: 150rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-weight: bold;
  font-size: 30rpx;
  text-align: center;
  border-radius: 10rpx;
}
.scrollPage .quoted-item .attr-item {
  flex: 1;
  text-align: right;
}
.scrollPage .quoted-item .attr-item .label {
  color: #666666;
  font-size: 22rpx;
}
.scrollPage .quoted-item .attr-item .value {
  color: #333333;
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}
.scrollPage .quoted-item .red {
  color: #ec4c4c;
}
.scrollPage .quoted-item .orgin {
  color: #f7b452;
}
.login {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: calc(100rpx + env(safe-area-inset-bottom) / 2);
  padding: 0 30rpx;
  background-color: #fff;
}
.login .btn-login {
  color: #f7b452;
}
.warn {
  color: #afafaf;
  margin-top: 10rpx;
}
.banner-box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 140rpx;
  margin-top: 40rpx;
}
.banner-box .btn-price {
  flex-basis: 48%;
  height: 140rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-image: url('https://www.hzx9999.com/file/wechatapplet/1.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.banner-box .btn-insured {
  margin-left: 20rpx;
  flex-basis: 48%;
  height: 140rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-image: url('https://www.hzx9999.com/file/wechatapplet/3.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
