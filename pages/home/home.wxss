.top-area {
  width: 100%;
  height: 460rpx;
  background-color: #febd01;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.top-area .nav-title {
  font-weight: 700;
}
.scrollPage {
  height: calc(100vh - calc(100rpx + env(safe-area-inset-bottom) / 2));
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
  width: 100%;
  background-color: #ffffff;
  padding-bottom: 60rpx;
}
.scrollPage .container {
  width: 100%;
  padding: 30rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.scrollPage .price-info {
  width: 100%;
  height: 110rpx;
}
.scrollPage .offer-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.scrollPage .offer-info .title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 700;
  position: relative;
  text-indent: 30rpx;
}
.scrollPage .offer-info .title::after {
  content: '';
  position: absolute;
  left: 0;
  width: 10rpx;
  height: 100%;
  border-radius: 20rpx;
  background-color: #febd01;
}
.scrollPage .offer-info .time {
  font-size: 24rpx;
  color: #888888;
}
.scrollPage .quoted {
  margin-top: 60rpx;
}
.scrollPage .quoted-list {
  padding: 20rpx;
}
.scrollPage .quoted-item {
  width: 100%;
  height: 126rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f7f7f7;
}
.scrollPage .quoted-item .name {
  flex: 3;
  width: 150rpx;
  height: 64rpx;
  line-height: 64rpx;
  color: #ffffff;
  font-size: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  background-image: linear-gradient(#f7d05f, #f7b050);
}
.scrollPage .quoted-item .attr-item {
  flex: 2;
  text-align: right;
}
.scrollPage .quoted-item .attr-item .label {
  color: #666666;
  font-size: 22rpx;
}
.scrollPage .quoted-item .attr-item .value {
  color: #333333;
  font-size: 25rpx;
  margin-top: 10rpx;
}
.scrollPage .quoted-item .red {
  color: #ec4c4c;
}
.scrollPage .quoted-item .orgin {
  color: #f7b452;
}
.login {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: calc(100rpx + env(safe-area-inset-bottom) / 2);
  padding: 0 30rpx;
  background-color: #fff;
}
.login .warn {
  color: #888888;
}
.login .btn-login {
  color: #f7b452;
}
