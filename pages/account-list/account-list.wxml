<!--pages/insured-list/insured-list.wxml-->
<cu-custom bgColor="bg-white" isBack="{{true}}">
	<view slot="content">{{ title }}</view>
</cu-custom>

<!-- 投保列表 -->
<scroll-view scroll-y="true">

  <!-- 搜索 -->
  <view class="search-box">
    
    <!-- 快递单号 -->
    <view class="cu-form-group">
      <view class="title">备注</view>
      <input class="text-right" placeholder="请输入备注" value="{{params.remark}}" bindinput="bindInput" data-key="remark"></input>
    </view>


    <view class="cu-form-group">
      <view class="title">类型</view>
      <view class="text-right">
        <radio-group class="block" bindchange="bindchange">
          <radio class="yellow" value="0"></radio>全部
          <radio class="yellow margin-left-sm" value="1"></radio>销售
        </radio-group>
      </view>
    </view>

    <!-- 开始时间 -->
    <view class="cu-form-group">
      <view class="title">开始时间</view>
      <picker mode="date" value="{{params.startTime}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
        <view class="picker">
          {{params.startTime}}
        </view>
      </picker>
    </view>
    
    <!-- 结束时间 -->
    <view class="cu-form-group">
      <view class="title">结束时间</view>
      <picker mode="date" value="{{params.endTime}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange1">
        <view class="picker">
          {{params.endTime}}
        </view>
      </picker>
    </view>

    <view class="margin-tb-lg text-center">
      <button class="cu-btn round bg-yellow" style="width: 80%" bindtap="queryList">查询</button>
    </view>
  </view>

    <view class="margin-top" wx:if="{{list.length>0}}">
      <view wx:for="{{list}}">

        <!-- 表单 -->
        <view class="cu-form-group">
          <text class="title">时间</text>
          <text class="text-gray">{{item.aaaaa}}</text>
        </view>
        <view class="cu-form-group">
          <text class="title">银行</text>
          <text class="text-gray">{{item.aaaaa}}</text>
        </view>
        <view class="cu-form-group">
          <text class="title">客户名</text>
          <text class="text-gray">{{item.customerName}}</text>
        </view>
    
        <!-- 进出账信息 -->
        <view class="cu-bar bg-white margin-top">
          <view class='action text-df'>
            <text class='cuIcon-titles text-orange '></text> 进出账
          </view>
        </view>
        <view class="cu-form-group">
          <view class="title">现金</view>
          <text class="text-gray">{{item.cashInAndOut}}</text>
        </view>
        <view class="cu-form-group">
          <view class="title">银行卡</view>
          <text class="text-gray">{{item.bankCardInAndOut}}</text>
        </view>
        <!-- <view class="cu-form-group">
          <view class="title">钯金</view>
          <text class="text-gray">{{item.aaaaa}}</text>
        </view> -->
        <view class="cu-form-group">
          <view class="title">结算</view>
          <text class="text-gray">{{item.systemJsinAndOut}}</text>
        </view>
    
        <!-- 进出料信息 -->
        <view class="cu-bar bg-white margin-top">
          <view class='action text-df'>
            <text class='cuIcon-titles text-orange '></text> 进出料
          </view>
        </view>
        <view class="cu-form-group flex justify-between align-center">
          <view class="flex justify-between align-center basis-sm">
            <text class="title">黄金</text>
            <text class="content text-gray">{{item.auInAndOutMaterial}}</text>
          </view>
          <view class="flex justify-between align-center basis-sm">
            <text class="title">铂金</text>
            <text class="text-gray">{{item.ptInAndOutMaterial}}</text>
          </view>
        </view>
        <view class="cu-form-group flex justify-between align-center">
          <view class="flex justify-between align-center basis-sm">
            <text class="title">钯金</text>
            <text class="content text-gray">{{item.pdInAndOutMaterial}}</text>
          </view>
          <view class="flex justify-between align-center basis-sm">
            <text class="title">白银</text>
            <text class="text-gray">{{item.agInAndOutMaterial}}</text>
          </view>
        </view>
    
        <!-- 定价 -->
        <view class="cu-bar bg-white margin-top">
          <view class='action text-df'>
            <text class='cuIcon-titles text-orange '></text> 定价
          </view>
        </view>
        <view class="cu-list grid col-4 no-border flex justify-around">
          <view class="item">
            <view class="text-center bg-orange header">黄金</view>
            <view class="text-center">单价 <text class="text-red">{{item.auPricePrice}}</text></view>
            <view class="text-center">数量 <text class="text-red">{{item.auPriceNumber}}</text></view>
          </view>
          <view class="item">
            <view class="text-center bg-orange header">铂金</view>
            <view class="text-center">单价 <text class="text-red">{{item.ptPricePrice}}</text></view>
            <view class="text-center">数量 <text class="text-red">{{item.ptPriceNumber}}</text></view>
          </view>
          <view class="item">
            <view class="text-center bg-orange header">钯金</view>
            <view class="text-center">单价 <text class="text-red">{{item.pdPricePrice}}</text></view>
            <view class="text-center">数量 <text class="text-red">{{item.pdPriceNumber}}</text></view>
          </view>
          <view class="item">
            <view class="text-center bg-orange header">白银</view>
            <view class="text-center">单价 <text class="text-red">{{item.agPricePrice}}</text></view>
            <view class="text-center">数量 <text class="text-red">{{item.agPriceNumber}}</text></view>
          </view>
        </view>
        
        <!-- 应收付账单结余款 -->
        <view class="cu-bar bg-white margin-top">
          <view class='action text-df'>
            <text class='cuIcon-titles text-orange '></text> 应收付账单结余款
          </view>
        </view>
        <view class="cu-form-group">
          <view class="title">黄金</view>
          <text class="text-gray">{{item.dealWithAu}}</text>
        </view>
        <view class="cu-form-group">
          <view class="title">铂金</view>
          <text class="text-gray">{{item.dealWithPt}}</text>
        </view>
        <view class="cu-form-group">
          <view class="title">钯金</view>
          <text class="text-gray">{{item.dealWithPd}}</text>
        </view>
        <view class="cu-form-group">
          <view class="title">白银</view>
          <text class="text-gray">{{item.dealWithAg}}</text>
        </view>
    
        <!-- 检测备注 -->
        <view class="cu-form-group align-start margin-top">
          <view class="title">检测备注</view>
          <textarea class="text-right" maxlength="-1" disabled="{{true}}" placeholder="请输入检测备注" value="{{item.remark}}"></textarea>
        </view>
      </view>
    </view>
</scroll-view>
  