<!--pages/insured-list/insured-list.wxml-->
<cu-custom bgColor="bg-white" isBack="{{true}}">
	<view slot="content">{{ title }}</view>
</cu-custom>

<!-- 投保列表 -->
<scroll-view scroll-y="true">

  <!-- 搜索 -->
  <view class="search-box">
    
    <!-- 快递单号 -->
    <view class="cu-form-group">
      <view class="title">定价单号</view>
      <input class="text-right" placeholder="请输入定价单号"></input>
    </view>


    <view class="cu-form-group">
      <view class="title">压料状态</view>
      <view class="text-right">
        <radio-group class="block">
          <radio class="yellow"></radio>全部
          <radio class="yellow margin-left-sm"></radio>销售
        </radio-group>
      </view>
    </view>

    <!-- 开始时间 -->
    <view class="cu-form-group">
      <view class="title">开始时间</view>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
        <view class="picker">
          {{date}}
        </view>
      </picker>
    </view>
    
    <!-- 结束时间 -->
    <view class="cu-form-group">
      <view class="title">结束时间</view>
      <picker mode="date" value="{{date1}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange1">
        <view class="picker">
          {{date1}}
        </view>
      </picker>
    </view>

    <view class="margin-tb-lg text-center">
      <button class="cu-btn round bg-yellow" style="width: 80%">查询</button>
    </view>
  </view>
  
  <view class="margin-bottom" wx:for="{{[1,2,3,4]}}">
    <!-- 表单 -->
    <view class="cu-form-group">
      <text class="title">定价单号</text>
      <text class="text-gray">2859834789349384</text>
    </view>
    <view class="cu-form-group">
      <text class="title">用户</text>
      <text class="text-gray">赵四</text>
    </view>
  
    <!-- 定价 -->
    <view class="cu-form-group bg-white">
      <view class='action text-df'>
        <text class='cuIcon-titles text-orange '></text> 定价回购
      </view>
    </view>
    <view class="cu-list grid col-4 no-border flex justify-around">
      <view class="item">
        <view class="text-center bg-orange header">黄金</view>
        <view class="text-center">单价 <text class="text-red">356.2</text></view>
        <view class="text-center">数量 <text class="text-red">35g</text></view>
      </view>
      <view class="item">
        <view class="text-center bg-orange header">铂金</view>
        <view class="text-center">单价 <text class="text-red">356.2</text></view>
        <view class="text-center">数量 <text class="text-red">35g</text></view>
      </view>
      <view class="item">
        <view class="text-center bg-orange header">钯金</view>
        <view class="text-center">单价 <text class="text-red">356.2</text></view>
        <view class="text-center">数量 <text class="text-red">35g</text></view>
      </view>
      <view class="item">
        <view class="text-center bg-orange header">白银</view>
        <view class="text-center">单价 <text class="text-red">356.2</text></view>
        <view class="text-center">数量 <text class="text-red">35g</text></view>
      </view>
    </view>
    <view class="cu-form-group bg-white">
      <view class='action text-df'>
        <text class='cuIcon-titles text-orange '></text> 定价销售
      </view>
    </view>
    <view class="cu-list grid col-4 no-border flex justify-around">
      <view class="item">
        <view class="text-center bg-orange header">黄金</view>
        <view class="text-center">单价 <text class="text-red">356.2</text></view>
        <view class="text-center">数量 <text class="text-red">35g</text></view>
      </view>
      <view class="item">
        <view class="text-center bg-orange header">铂金</view>
        <view class="text-center">单价 <text class="text-red">356.2</text></view>
        <view class="text-center">数量 <text class="text-red">35g</text></view>
      </view>
      <view class="item">
